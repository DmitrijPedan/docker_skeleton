FROM node:12.16.1

USER node

WORKDIR /www

CMD ["node", "-e", "setInterval(() => {}, 60000); process.on('SIGTERM', () => process.exit(0));"]


# Dockerfile    файл настройки образа (название по умолчанию) для каждого образа свой файл
#               этот файл сбилдит контейнер один раз при старте. 
#               каждый раз запускатся будет через docker-compose
# FROM откуда собирать образ (название из docker-hub)
# USER пользователь
# WORKDIR рабочая директория внутри контейнера (название любое)
# CMD   команда чтобы перезапускалась нода 
#       node запуск ноды
#       -е - команда JS eval
#       setInterval - периодичность перезапуска 
#       () => process.exit(0)) - возможность остановить процесс